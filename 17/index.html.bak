<body>
    <script>
        // 语法：StringObject.toUpperCase()
        // 功能：将字符串转化为大写
        // 参数：无
        // 返回值：转化为大写字符串

        //var str = "a1b2@#$c"
        //var str1 = str.toUpperCase()
        //console.log(str)
        //console.log(str1)

        // 语法：StringObject.toLowerCase()
        // 功能：将字符串转化为小写
        // 参数：无
        // 返回值：转化为小写字符串


        // var str = "ABC"
        // var str1 = str.toLowerCase()
        // console.log(str)
        // console.log(str1)	

        //console.log(fun("qweqweWERWERewqwe"))

        function fun(str) {
            return str.split("").map(function (item) {
                return item === item.toUpperCase() ? item.toLowerCase() : item.toUpperCase()
            }).join("")
        }


    </script>
</body>

</html>